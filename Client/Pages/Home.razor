@page "/"
@using BlazorApp.Client.Component

<PageTitle>Home</PageTitle>

<MudCard Class="mx-auto my-6 p-4 max-w-xl">
    <MudCardMedia Image="https://media.licdn.com/dms/image/v2/C5103AQGrTQ_mVzpbMw/profile-displayphoto-shrink_800_800/profile-displayphoto-shrink_800_800/0/1570354316722?e=1748476800&v=beta&t=lM1ZLUqTCH6_zqijIsz0epELC4_wUfa9EvH3mO5js5w"
                  Alt="Profile Image"
                  Class="w-full object-contain h-auto" />

    <MudCardContent>
        <MudTypography Variant="h4" GutterBottom>Hi, I'm [Your Name] 👋</MudTypography>
        <MudTypography Variant="body1" GutterBottom>
            I'm a <strong>.NET Developer</strong> with over <strong>10 years of experience</strong> in crafting impactful software solutions.
            I started my journey with <strong>WPF</strong> and <strong>C#</strong> for desktop applications, and now I build
            <strong>web applications</strong> using <strong>Blazor WebAssembly</strong> and <strong>ASP.NET MVC</strong>.
        </MudTypography>
        <MudTypography Variant="body1" GutterBottom>
            I've worked with leading companies like <strong>Vodafone NZ</strong>, <strong>Capgemini</strong>, and <strong>Nuuday Telecom</strong>,
            solving complex problems in telecommunications, banking, and HR domains.
        </MudTypography>
        <MudTypography Variant="body1" GutterBottom>
            Currently, I'm exploring <strong>AI with .NET</strong>, <strong>ethical hacking</strong>, and pursuing <strong>financial independence</strong>.
            Let's connect and build something amazing together!
        </MudTypography>
    </MudCardContent>
    <MudCardActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled">Connect with Me</MudButton>
        <MudButton Color="Color.Secondary" Variant="Variant.Outlined">View Portfolio</MudButton>
    </MudCardActions>
</MudCard>

